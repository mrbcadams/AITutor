
<div class="auth-container" style="max-width: 400px; margin: 2rem auto; background: #fff; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.07); padding: 2rem;">
  <h2 style="text-align:center; margin-bottom: 1.5rem;">Account Settings</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group" style="margin-bottom: 1rem;">
      <%= f.label :email, nil, style: 'font-weight: 600;' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: 'width: 100%; padding: 0.5rem; border-radius: 4px; border: 1px solid #ccc;' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div style="margin-bottom: 1rem; color: #888; font-size: 0.95em;">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group" style="margin-bottom: 1rem;">
      <%= f.label :password, "New password", style: 'font-weight: 600;' %> <i style="font-size: 0.95em; color: #888;">(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", style: 'width: 100%; padding: 0.5rem; border-radius: 4px; border: 1px solid #ccc;' %>
      <% if @minimum_password_length %>
        <em style="font-size: 0.9em; color: #888;">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>

    <div class="form-group" style="margin-bottom: 1rem;">
      <%= f.label :password_confirmation, nil, style: 'font-weight: 600;' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", style: 'width: 100%; padding: 0.5rem; border-radius: 4px; border: 1px solid #ccc;' %>
    </div>

    <div class="form-group" style="margin-bottom: 1rem;">
      <%= f.label :current_password, nil, style: 'font-weight: 600;' %> <i style="font-size: 0.95em; color: #888;">(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", style: 'width: 100%; padding: 0.5rem; border-radius: 4px; border: 1px solid #ccc;' %>
    </div>

    <div class="form-actions" style="text-align:center; margin-top: 1.5rem;">
      <%= f.submit "Update", class: "btn btn-primary", style: 'background: #2d72d9; color: #fff; border: none; border-radius: 4px; padding: 0.75rem 2rem; font-size: 1rem; font-weight: 600; cursor: pointer;' %>
    </div>
  <% end %>

  <div style="margin-top: 2.5rem; text-align:center;">
    <h3 style="color: #c0392b; margin-bottom: 0.5rem;">Cancel my account</h3>
    <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger", style: 'background: #c0392b; color: #fff; border: none; border-radius: 4px; padding: 0.5rem 1.5rem; font-size: 1rem; font-weight: 600; cursor: pointer;' %></div>
  </div>

  <div style="margin-top: 1.5rem; text-align:center;">
    <%= link_to "Back", root_path, class: "nav-link", style: 'color: #2d72d9; text-decoration: underline; font-weight: 500;' %>
  </div>
</div>


<div class="floating-elements">
  <div class="floating-element">📚</div>
  <div class="floating-element">✨</div>
  <div class="floating-element">🎓</div>
  <div class="floating-element">💡</div>
</div>

<div class="container">
  <div class="header">
    <h1 class="title">🚀 AI Tutor</h1>
    <p class="subtitle">Your Personal Learning Companion</p>
    <p class="tagline">Designed specifically for 6th grade students</p>
  </div>

  <div class="subjects-grid">
    <%= link_to tutor_chat_path(subject: 'math'), class: "subject-card math-card" do %>
      <span class="card-icon">🔢</span>
      <h3 class="card-title">Math Wizard</h3>
      <p class="card-description">Master numbers, fractions, algebra, and geometry with step-by-step guidance.</p>
      <p class="card-tagline">Solve math mysteries together!</p>
    <% end %>

    <%= link_to tutor_chat_path(subject: 'science'), class: "subject-card science-card" do %>
      <span class="card-icon">🔬</span>
      <h3 class="card-title">Science Explorer</h3>
      <p class="card-description">Discover how the world works through biology, chemistry, and physics experiments.</p>
      <p class="card-tagline">Unlock nature's secrets!</p>
    <% end %>

    <%= link_to tutor_chat_path(subject: 'english'), class: "subject-card english-card" do %>
      <span class="card-icon">📝</span>
      <h3 class="card-title">Word Artist</h3>
      <p class="card-description">Improve reading, writing, grammar, and vocabulary with creative exercises.</p>
      <p class="card-tagline">Paint with words!</p>
    <% end %>

    <%= link_to tutor_chat_path(subject: 'social_studies'), class: "subject-card social-studies-card" do %>
      <span class="card-icon">🌍</span>
      <h3 class="card-title">World Adventurer</h3>
      <p class="card-description">Explore history, geography, cultures, and governments around the globe.</p>
      <p class="card-tagline">Journey through time and space!</p>
    <% end %>

    <%= link_to tutor_chat_path(subject: 'how_to_study'), class: "subject-card how-to-study-card" do %>
      <span class="card-icon">🔍</span>
      <h3 class="card-title">Study Buddy</h3>
      <p class="card-description">Learn how to study effectively and develop good habits.</p>
      <p class="card-tagline">Your partner in learning!</p>
    <% end %>

    <%= link_to tutor_chat_path(subject: 'reading'), class: "subject-card reading-card" do %>
      <span class="card-icon">📖</span>
      <h3 class="card-title">Reading Guide</h3>
      <p class="card-description">Build reading comprehension and analytical skills through engaging texts.</p>
      <p class="card-tagline">Examine the world through the great stories!</p>
    <% end %>

  </div>
</div>
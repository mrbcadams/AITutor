<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
  }

  .container {
    text-align: center;
    max-width: 1000px;
    width: 100%;
  }

  .header {
    margin-bottom: 50px;
    animation: fadeInDown 1s ease-out;
  }

  .title {
    font-size: 3.5rem;
    color: white;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    margin-bottom: 10px;
    font-weight: 700;
  }

  .subtitle {
    font-size: 1.4rem;
    color: rgba(255,255,255,0.9);
    font-weight: 300;
    margin-bottom: 20px;
  }

  .tagline {
    font-size: 1.1rem;
    color: rgba(255,255,255,0.8);
    font-style: italic;
  }

  .subjects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
    margin-top: 40px;
    animation: fadeInUp 1s ease-out 0.3s both;
  }

  .subject-card {
    background: white;
    border-radius: 20px;
    padding: 30px 20px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    position: relative;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
  }

  .subject-card:hover {
    transform: translateY(-15px) scale(1.05);
    box-shadow: 0 20px 40px rgba(0,0,0,0.3);
    text-decoration: none;
    color: inherit;
  }

  .subject-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6px;
    transition: height 0.3s ease;
  }

  .subject-card:hover::before {
    height: 100%;
    opacity: 0.1;
  }

  .math-card::before { background: linear-gradient(135deg, #667eea, #764ba2); }
  .science-card::before { background: linear-gradient(135deg, #f093fb, #f5576c); }
  .english-card::before { background: linear-gradient(135deg, #4facfe, #00f2fe); }
  .social-studies-card::before { background: linear-gradient(135deg, #43e97b, #38f9d7); }

  .card-icon {
    font-size: 4rem;
    margin-bottom: 20px;
    display: block;
    transition: transform 0.3s ease;
  }

  .subject-card:hover .card-icon {
    transform: scale(1.2) rotate(5deg);
  }

  .card-title {
    font-size: 1.8rem;
    font-weight: 700;
    margin-bottom: 10px;
    color: #2c3e50;
  }

  .card-description {
    font-size: 1rem;
    color: #666;
    line-height: 1.6;
    margin-bottom: 15px;
  }

  .card-tagline {
    font-size: 0.9rem;
    font-weight: 600;
    color: #7f8c8d;
    font-style: italic;
  }

  .math-card .card-title { color: #667eea; }
  .science-card .card-title { color: #f5576c; }
  .english-card .card-title { color: #4facfe; }
  .social-studies-card .card-title { color: #43e97b; }

  .floating-elements {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    overflow: hidden;
    z-index: -1;
  }

  .floating-element {
    position: absolute;
    opacity: 0.1;
    animation: float 6s ease-in-out infinite;
    font-size: 2rem;
  }

  .floating-element:nth-child(1) { top: 10%; left: 10%; animation-delay: 0s; }
  .floating-element:nth-child(2) { top: 20%; right: 10%; animation-delay: 2s; }
  .floating-element:nth-child(3) { bottom: 20%; left: 20%; animation-delay: 4s; }
  .floating-element:nth-child(4) { bottom: 10%; right: 20%; animation-delay: 1s; }

  @keyframes fadeInDown {
    from { opacity: 0; transform: translateY(-30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(10deg); }
  }

  @media (max-width: 768px) {
    .title { font-size: 2.5rem; }
    .subtitle { font-size: 1.2rem; }
    .subjects-grid { grid-template-columns: 1fr; gap: 20px; }
    .subject-card { padding: 25px 15px; }
  }
</style>

